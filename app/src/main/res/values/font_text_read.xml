<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="font_from_to" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF2e3b55</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        </style>
    
    <style name="font_from_to_edit" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">0000</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">#FF2e3b55</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    
    <style name="font_from_to_edit_nb_block" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">0001</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">#FF2e3b55</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
</resources>