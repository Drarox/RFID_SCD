<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuNDEFReadActivityId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bckgnd"
    tools:context=".MMYDemoNDEFReadActivity" >

    <fragment
        android:name="com.st.NFC.NFCAppHeaderFragment"
        android:id="@+id/MnrActNFCAppHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"/>
 	
	<RelativeLayout
	    android:id="@+id/MnrHeaderRelLayoutId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_marginTop="@dimen/activity_vertical_offset_header_start_display"
		android:layout_below="@+id/MnrActNFCAppHeaderFragmentId" >
	
		<TextView
			android:id="@+id/MnrHeaderTxtId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:typeface="serif"
	        android:textStyle="bold"
			android:text="@string/mnr_header_txt"
			android:textSize="@dimen/mnr_header_txt_size" />
	
		<TextView
	 		android:id="@+id/MnrHeaderTailId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/MnrHeaderTxtId"
			android:layout_marginTop="@dimen/tag_header_tail_top_margin"
			android:text="@string/tag_header_tail_txt"
			android:textSize="@dimen/tag_header_tail_size" />
	
	</RelativeLayout>

    <fragment
        android:name="com.st.Fragments.TagHeaderFragment"
        android:id="@+id/MnrActTagHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/MnrHeaderRelLayoutId" />
    	
    <!-- "No NDEF data" text view -->
    <TextView
   	    android:id="@+id/MnrActNoNDEFDataId"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
		android:layout_below="@+id/MnrActTagHeaderFragmentId"
	    android:layout_marginTop="@dimen/ti_act_add_txt_top_margin"
       	android:typeface="serif"
	    android:text="@string/mnf_no_ndef_data_txt"
   	    android:textSize="@dimen/mcf_frag_not_avail_txt_size" />

    <!-- NDEF data (exclusive with "No NDEF data" text view) -->
	<RelativeLayout
	    android:id="@+id/MnrActMsgRelLayoutId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/tag_header_tail_top_margin"
		android:layout_marginBottom="@dimen/mnf_frag_write_btn_bottom_margin"
		android:layout_below="@+id/MnrActTagHeaderFragmentId" >
	    
	    <TextView
	   	    android:id="@+id/MnrActMsgHeaderId"
	       	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       	android:typeface="serif"
	        android:textStyle="bold"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_header_field_size"
	   	    android:text="@string/mnf_frag_NDEF_msg_header_txt" />
	
	    <TextView
	        android:id="@+id/MnrActMsgNbId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	   	    android:layout_alignBottom="@+id/MnrActMsgHeaderId"
		    android:layout_toRightOf="@+id/MnrActMsgHeaderId"
	        android:clickable="false"
	        android:inputType="number"
	        android:lines="1"
	        android:text="1"
	        android:textSize="@dimen/mnw_frag_NDEF_msg_nb_field_size"
	        android:typeface="serif" />
	
	    <TextView
	   	    android:id="@+id/MnrActMsgTotalId"
	       	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	   	    android:layout_alignBottom="@+id/MnrActMsgNbId"
		    android:layout_toRightOf="@+id/MnrActMsgNbId"
		    android:text=" / 1"
	       	android:typeface="serif"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_nb_field_size" />
	
		<Button 
		    android:id="@+id/MnrActFirstMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_first_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnrActMsgTotalId"
		    android:layout_toRightOf="@+id/MnrActMsgTotalId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnrActPrevMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_prev_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnrActFirstMsgBtnId"
		    android:layout_toRightOf="@+id/MnrActFirstMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnrActNextMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_next_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnrActPrevMsgBtnId"
		    android:layout_toRightOf="@+id/MnrActPrevMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnrActLastMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_last_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnrActNextMsgBtnId"
		    android:layout_toRightOf="@+id/MnrActNextMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnrActNewMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_new_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_height"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnrActLastMsgBtnId"
		    android:layout_toRightOf="@+id/MnrActLastMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<TextView
		    android:id="@+id/MnrActRecTypeHeaderId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_below="@+id/MnrActMsgHeaderId"
		    android:layout_marginTop="@dimen/tag_header_top_margin"
	        android:textStyle="bold"
	        android:typeface="serif"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_header_field_size"
		    android:text="@string/mnf_frag_NDEF_rec_types_header" />

		<TextView
		    android:id="@+id/MnrActRecTypeId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/MnrActRecTypeHeaderId"
			android:layout_marginLeft="@dimen/ti_act_add_txt_field_left_margin"
		    android:layout_alignBaseline="@+id/MnrActRecTypeHeaderId" />

		<FrameLayout
        	android:id="@+id/MnrActRecContentId"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/MnrActRecTypeHeaderId"
		    android:layout_marginTop="@dimen/mnf_frag_NDEF_rec_top_margin" />

	</RelativeLayout>

	<!-- Button to re-read tag NDEF file -->
	<RelativeLayout
	    android:id="@+id/MnrActReadBtnAreaId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
		android:layout_marginLeft="@dimen/mnf_frag_read_btn_left_margin"
		android:layout_marginBottom="@dimen/mnf_frag_read_btn_bottom_margin" >
	    
	    <include layout="@layout/view_basic_button" />
	    
	</RelativeLayout>

	<!-- Button to write NDEF file to tag -->
	<RelativeLayout
	    android:id="@+id/MnrActWriteBtnAreaId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
		android:layout_marginRight="@dimen/mnf_frag_write_btn_right_margin"
		android:layout_marginBottom="@dimen/mnf_frag_write_btn_bottom_margin" >
	    
	    <include layout="@layout/view_basic_button" />
	    
	</RelativeLayout>

	<include layout="@layout/view_application_version" />

</RelativeLayout>
