<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WForTapActivityId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/st_bckgnd"
    tools:context="com.st.demo.WaitForNFCTapActivity" >

    <fragment
        android:name="com.st.NFC.NFCAppHeaderFragment"
        android:id="@+id/WcActNFCAppHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"/>

	<RelativeLayout
	    android:id="@+id/WforTapActMainTxtRelLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_marginTop="@dimen/activity_vertical_offset_header_start_display" >
	    <TextView
    	    android:id="@+id/WforTapActMainTxt1Id"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
        	android:typeface="serif"
		    android:layout_marginTop="@dimen/wc_act_main_txt_1_top_margin"
    	    android:textSize="@dimen/wc_act_main_txt_size" />
	    <TextView
        	android:id="@+id/WforTapActMainTxt2Id"
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
	        android:typeface="serif"
		    android:layout_below="@+id/WforTapActMainTxt1Id"
        	android:textSize="@dimen/wc_act_main_txt_size" />
	    
    </RelativeLayout>

	<ImageView
	    android:id="@+id/NfcWavesImgId"
	    android:contentDescription="@string/wc_act_nfc_waves_anim_descr"
	    android:layout_width="57dp"
	    android:layout_height="112dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="160dp"
	    android:layout_marginTop="270dp"
	    android:src="@drawable/nfc_wave_empty" />
			
	<include
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    layout="@layout/view_application_version" />

	<RelativeLayout
	    android:id="@+id/PingPongResLayout"
	    android:layout_width ="match_parent"
	    android:layout_height ="match_parent"
	    android:orientation="vertical"
	    android:visibility="gone"
	    android:background="@drawable/bckgnd"
	    android:alpha="1">
	    <TextView
	        android:id="@+id/PingPongResTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="DATA Exchanged"
	        android:textSize="25sp"
	        android:layout_marginTop="50dp"
	        android:gravity="center"
	        />
	    <LinearLayout
	        android:id="@+id/TabLabel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="4dp"
	        android:orientation="horizontal"
	        android:layout_below="@id/PingPongResTitle">
	        <TextView
	        android:id="@+id/PingPongResTX"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="DATA TX"
	        android:textSize="15sp"
	        android:gravity="center"/>
	        <TextView
	        android:id="@+id/PingPongResRX"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="DATA RX"
	        android:textSize="15sp"
	        android:gravity="center"/>
	     </LinearLayout>
	     <ScrollView
	         android:id="@+id/sctxrxView"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/TabLabel">

	       <LinearLayout
    			android:id="@+id/txrxcontainer"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginTop="4dp"
	        	android:orientation="vertical">
 		</LinearLayout> 
	     </ScrollView>
	     
	     <Button
	        android:id="@+id/rxtxDone"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    android:background="@drawable/relative_selector"
		    android:paddingLeft="40dp"
		    android:paddingRight="40dp"
		    android:layout_marginLeft="30dp"
		    android:layout_marginRight="30dp"
		    android:text="Done"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"/>
	</RelativeLayout>
</RelativeLayout>