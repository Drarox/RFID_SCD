<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuNDEFWriteActivityId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"

    tools:context=".MMYDemoWriteNDEFActivity" >

    <fragment
        android:id="@+id/MnwActNFCAppHeaderFragmentId"
        android:name="com.st.NFC.NFCAppHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:id="@+id/MnwHeaderRelLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/MnwActNFCAppHeaderFragmentId" >

        <TextView
            android:id="@+id/MnwHeaderTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/mnw_header_txt"
            android:textSize="@dimen/mnr_header_txt_size"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/MnwHeaderTailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MnwHeaderTxtId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tag_header_tail_top_margin"
            android:text="@string/tag_header_tail_txt"
            android:textSize="@dimen/tag_header_tail_size" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/MnwActRecContentId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/MnwHeaderRelLayoutId"
        android:layout_marginTop="@dimen/mnf_frag_NDEF_rec_top_margin" />

    <!-- Button to write NDEF file to tag -->

    <RelativeLayout
        android:id="@+id/MnwActWriteBtnAreaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/mnf_frag_write_btn_bottom_margin"
        android:layout_marginRight="@dimen/mnf_frag_write_btn_right_margin"
        android:visibility="gone" >

        <include layout="@layout/view_basic_button" />
    </RelativeLayout>

    <!-- Button to Add mail sent action on mail -->

    <RelativeLayout
        android:id="@+id/BasicBtnIdSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/mnf_frag_write_btn_bottom_margin"
        android:clickable="true"
        android:onClick="onClickSendMail"
        android:visibility="gone" >

        <Button
            android:id="@+id/BasicBtnIdMail"
            android:layout_width="@dimen/basic_button_max_width"
            android:layout_height="@dimen/basic_button_max_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/relative_selector"
            android:maxHeight="@dimen/basic_button_max_height"
            android:maxWidth="@dimen/basic_button_max_width"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/basic_button_txt_size"
            android:textStyle="bold"
            android:typeface="serif" >
        </Button>
        <!-- <include layout="@layout/view_basic_button" /> -->
    </RelativeLayout>

    <!-- Button to Add NDEF Record to the current NDEF message -->

    <RelativeLayout
        android:id="@+id/BasicBtnIdAddRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/MnwActWriteBtnAreaId"
        android:layout_alignLeft="@id/MnwActWriteBtnAreaId"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/mnf_frag_write_btn_right_margin"
        android:clickable="true"
        android:onClick="onClickAddRecord"
        android:visibility="gone" >

        <include layout="@layout/view_basic_button" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/rllistndefmsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/MnwHeaderRelLayoutId" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/RlBasicBtnMultiRcds"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickWriteMultipleRecords"
                android:padding="6dip" >

                <include layout="@layout/ndef_multircds_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditText"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
               android:layout_below="@id/RlBasicBtnMultiRcds"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditText"
                android:padding="6dip" >

                <include layout="@layout/ndef_text_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditURL"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditText"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditURL"
                android:padding="6dip" >

                <include layout="@layout/ndef_url_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditContact"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditURL"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditContact"
                android:padding="6dip" >

                <include layout="@layout/ndef_contact_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditaar"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditContact"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditaar"
                android:padding="6dip" >

                <include layout="@layout/ndef_aar_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditwifi"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditaar"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditwifi"
                android:padding="6dip" >

                <include layout="@layout/ndef_cnxwifi_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditbt"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditwifi"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditbt"
                android:padding="6dip" >

                <include layout="@layout/ndef_cnxbt_button_list" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RlBActionEditbtle"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditbt"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditbtle"
                android:padding="6dip" >

                <include layout="@layout/ndef_cnxbtle_button_list" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RlBActionEditsms"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditbtle"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditsms"
                android:padding="6dip" >

                <include layout="@layout/ndef_sms_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditmail"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditsms"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickEditmail"
                android:padding="6dip" >

                <include layout="@layout/ndef_mail_button_list" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RlBActionEditm24srDiscoCtrl"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_below="@id/RlBActionEditmail"
                android:layout_margin="2dp"
                android:background="@drawable/relative_selector"
                android:clickable="true"
                android:onClick="onClickm24srDiscoCtrl"
                android:padding="6dip" >

                <include layout="@layout/ndef_m24srdiscoctlr_button_list" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/wait_for_tap_screen" />

    <include layout="@layout/view_application_version" />

</RelativeLayout>