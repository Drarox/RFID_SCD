<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WForTapActivityId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/st_bckgnd"
    tools:context="com.st.demo.WaitForNFCTapM24SRDemo" >

    <fragment
        android:name="com.st.NFC.NFCAppHeaderFragment"
        android:id="@+id/WcActNFCAppHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"/>

	<RelativeLayout
	    android:id="@+id/WforTapActMainTxtRelLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_marginTop="@dimen/activity_vertical_offset_header_start_display" >
	    <TextView
    	    android:id="@+id/WforTapActMainTxt1Id"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
        	android:typeface="serif"
		    android:layout_marginTop="@dimen/wc_act_main_txt_1_top_margin"
    	    android:textSize="@dimen/wc_act_main_txt_size" />
	    <TextView
        	android:id="@+id/WforTapActMainTxt2Id"
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
	        android:typeface="serif"
		    android:layout_below="@+id/WforTapActMainTxt1Id"
        	android:textSize="@dimen/wc_act_main_txt_size" />
	    
    </RelativeLayout>

	<ImageView
	    android:id="@+id/NfcWavesImgId"
	    android:contentDescription="@string/wc_act_nfc_waves_anim_descr"
	    android:layout_width="57dp"
	    android:layout_height="112dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="160dp"
	    android:layout_marginTop="270dp"
	    android:src="@drawable/nfc_wave_empty" />
			
	<include
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    layout="@layout/view_application_version" />


</RelativeLayout>