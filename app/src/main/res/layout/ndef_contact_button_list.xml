<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	     <ImageView
	   	    android:id="@+id/iconContact"
	   	    android:layout_width="48dp"
	   	    android:layout_height="fill_parent"
	   	    android:layout_alignParentBottom="true"
	   	    android:layout_alignParentTop="true"
	   	    android:layout_marginRight="6dip"
	   	    android:contentDescription="Contact Edit Icon"
	   	    android:src="@drawable/contact" />

	    <TextView  
	        android:id="@+id/secondLineContact"
	        android:layout_width="fill_parent"
	        android:layout_height="26dip" 
	        android:layout_toRightOf="@id/iconContact"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:text="@string/actiondetailContact"/>
   <LinearLayout
        android:layout_above="@id/secondLineContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        
    <CheckBox android:id="@+id/checkbox_meat_contact"
        android:layout_above="@id/secondLineContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rcds"
        android:onClick="onCheckboxRcdsStorageClicked"/>
        <CheckBox android:id="@+id/checkbox_NdefRcds_contact"
        android:layout_above="@id/secondLineContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In NDEF"
        android:onClick="onCheckboxRcdsNDEF"/>
        </LinearLayout>
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/CodeFont.Big"
	        android:layout_toRightOf="@id/iconContact"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_above="@id/secondLineContact"
	        android:layout_alignWithParentIfMissing="true"
	        android:gravity="center_vertical"
	        android:text="@string/actionLabelContact"/>
</merge>