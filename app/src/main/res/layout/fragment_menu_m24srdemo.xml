<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MenuM24SRDemoFragment" >

    
    <RelativeLayout
        android:id="@+id/ToolHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" />
    
 	<RelativeLayout
	    android:id="@+id/RLM24SRSpecificSection"
	    android:layout_width="fill_parent"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:layout_margin="2dp"
	    android:layout_marginLeft="15dp"
	    android:clickable="true"
	    android:padding="6dip"
	    android:paddingLeft="20dp">
    
    	<ImageView
    	    android:id="@+id/icTextEdit1"
    	    android:layout_width="48dp"
    	    android:layout_height="fill_parent"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginRight="6dip"
    	    android:contentDescription="m24sr Icon"
    	    android:src="@drawable/logo_st_m24sr_transp" />

	    <TextView  
	        android:id="@+id/secondLine1"
	        android:layout_width="fill_parent"
	        android:layout_height="26dip" 
	        android:layout_toRightOf="@id/icTextEdit1"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:text="Control M24SR/ST25 Discovery kit"/>

	    <TextView
	        android:layout_width="fill_parent"
	        style="@style/CodeFont.Big"
	        android:layout_height="wrap_content" 
	        android:layout_toRightOf="@id/icTextEdit1"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_above="@id/secondLine1"
	        android:layout_alignWithParentIfMissing="true"
	        android:gravity="center_vertical"
	        android:text="ST Specific Discovery Kit Features"/>
	</RelativeLayout>
		
	<RelativeLayout
	    android:id="@+id/ToolRelLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_below="@+id/RLM24SRSpecificSection">
	

	   <ScrollView
	    android:id="@+id/ScrollView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			
		<RelativeLayout
	    android:id="@+id/RLM24SRSpecificSectionScroll"
	    android:layout_width="fill_parent"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:layout_margin="2dp"
	    android:layout_marginLeft="15dp"
	    android:clickable="true"
	    android:padding="6dip"
	    android:paddingLeft="20dp">
			


		<!--  NDEF File Structure Format // Code example not activated -->
		<LinearLayout
		    android:id="@+id/FormatLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+d/RLM24SRSpecificSection"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="gone">
			<Button
			    android:id="@+id/BFormatNdef"
		    	android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:text="Format NDEF">
			</Button>
		</LinearLayout>

		
	    <!--  IT MANAGEMENT // Code example not activated -->

		<LinearLayout
		    android:id="@+id/ITRelLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/FormatLayout"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="visible">

			<Button
			    android:id="@+id/bEnableIT"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Send IT" >
			</Button>
		</LinearLayout>
		
		<!--  Data Ecxchange // Code example not activated -->
		<LinearLayout
		    android:id="@+id/ExchangeLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ITRelLayout"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="visible">
			<Button
			    android:id="@+id/BStartExchange"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="FW Upload" >
			</Button>
		</LinearLayout>
		
		<!--  M24SR Discovery Settings Demo // Code example not activated -->
		<LinearLayout
		    android:id="@+id/SettingsDemoLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ExchangeLayout"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="visible">
			<Button
			    android:id="@+id/BStartSetSettingsDemo"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Settings Demo" >
			</Button>
			<Button
			    android:id="@+id/BSetSettings"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Settings" >
			</Button>
		</LinearLayout>
		<!--  M24SR Discovery Data Log Demo // Code example not activated -->
		<LinearLayout
		    android:id="@+id/DataLogDemoLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/SettingsDemoLayout"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="visible">
			<Button
			    android:id="@+id/BStartDataLogDemo"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Data Log Demo" >
			</Button>
		</LinearLayout>
		<!--  M24SR Discovery PingPong Demo // Code example not activated -->
		<LinearLayout
		    android:id="@+id/PingPongDemoLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/DataLogDemoLayout"
		    android:layout_marginLeft="30dp"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp" 
		    android:visibility="visible">
			<Button
			    android:id="@+id/BStartPingPongDemo"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Ping Pong" >
			</Button>
			<Button
			    android:id="@+id/BSettingsPingPongDemo"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="4"
			    android:background="@drawable/relative_selector"
			    android:paddingLeft="10dp"
			    android:text="Settings" >
			</Button>
		</LinearLayout>
		</RelativeLayout>
		</ScrollView>
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/settingsLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bckgnd"
	    android:visibility="gone"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical">
	   
		<FrameLayout
		    android:id="@+id/frSettings"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/mnf_frag_NDEF_rec_top_margin"/>
		
		<Button
	    android:id="@+id/BSettingsDone"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="10dp"
	    android:background="@drawable/relative_selector"
	    android:paddingLeft="40dp"
	    android:paddingRight="40dp"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:text="Done"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/frSettings">
		</Button>
	

	 </RelativeLayout> 
	 
	<RelativeLayout
	    android:id="@+id/settingsPingPongLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bckgnd"
	    android:visibility="gone"
	    android:orientation="horizontal">

		<TextView 
		    android:id="@+id/TvsettingsPingPong"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       		android:layout_alignParentLeft="true"
        	android:textColor="@color/black"
        	android:textSize="20sp"
       	 	android:textStyle="normal"
        	android:typeface="serif"
        	android:text="Start Value :"
        	android:layout_marginTop="20dp"
        	android:layout_marginRight="40dp"/>

		<TextView
		    android:id="@+id/EtsettingsPingPongValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_toRightOf="@id/TvsettingsPingPong"
		    android:background="#cfe7f5"
		    android:textSize="20sp"
		    android:text="000"
		    android:textColor="@color/dark_gray" />
 		
		<SeekBar
   		    android:id="@+id/startseekbar1"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:layout_toRightOf="@id/EtsettingsPingPongValue"
   		    android:layout_marginTop="20dp"
   		    android:max="999" >
   		</SeekBar>
   		

		<TextView 
		    android:id="@+id/TvOffsetPingPong"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       		android:layout_alignParentLeft="true"
       		android:layout_below="@id/TvsettingsPingPong"
        	android:textColor="@color/black"
        	android:textSize="20sp"
       	 	android:textStyle="normal"

        	android:typeface="serif"
        	android:text="Offset Value :"
        	android:layout_marginTop="20dp"
        	android:layout_marginRight="40dp"/>

		<TextView
		    android:id="@+id/EtOffsetPingPongValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@id/EtsettingsPingPongValue"
		    android:layout_alignTop="@id/TvOffsetPingPong"
		    android:layout_below="@id/EtsettingsPingPongValue"
		    android:layout_toRightOf="@id/TvOffsetPingPong"
		    android:background="#cfe7f5"
		    android:textSize="20sp"
		    android:text="110"
		    android:textColor="@color/dark_gray" />
		
		<SeekBar
   		    android:id="@+id/offsetseekbar1"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/EtOffsetPingPongValue"
		    android:layout_alignTop="@id/EtOffsetPingPongValue"
		    android:layout_alignLeft="@id/startseekbar1"
		    android:layout_below="@id/startseekbar1"
   		    android:max="999" >
   		</SeekBar>

		<TextView 
		    android:id="@+id/TvloopPingPong"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       		android:layout_alignParentLeft="true"
       		android:layout_below="@id/TvOffsetPingPong"
        	android:textColor="@color/black"
        	android:textSize="20sp"
       	 	android:textStyle="normal"
        	android:typeface="serif"
        	android:text="Loop Value :"
        	android:layout_marginTop="20dp"
        	android:layout_marginRight="40dp"/>

		<TextView
		    android:id="@+id/EtLoopPingPongValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@id/EtOffsetPingPongValue"
		    android:layout_alignTop="@id/TvloopPingPong"
		    android:layout_below="@id/EtOffsetPingPongValue"
		    android:layout_toRightOf="@id/TvloopPingPong"
		    android:background="#cfe7f5"
       	 	android:textSize="20sp"
		    android:text="010"
		    android:textColor="@color/dark_gray" />
<!-- 		
		<SeekBar
   		    android:id="@+id/loopseekbar1"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:layout_alignLeft="@id/EtsettingsPingPongValue"
		    android:layout_alignTop="@id/TvloopPingPong"
		    android:layout_below="@id/offsetseekbar1"
		    android:layout_toRightOf="@id/EtLoopPingPongValue"
   		    android:layout_marginTop="26dp"
   		    android:max="20" >
		</SeekBar>
 -->	
 		<SeekBar
   		    android:id="@+id/loopseekbar1"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/EtLoopPingPongValue"
		    android:layout_alignTop="@id/EtLoopPingPongValue"
		    android:layout_alignLeft="@id/offsetseekbar1"
		    android:layout_below="@id/offsetseekbar1"
   		    android:max="20" >
   		</SeekBar>
		<Button
	    android:id="@+id/BPingPongSettingsDone"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="40dp"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/relative_selector"
	    android:text="Done" />
	</RelativeLayout>

	<TextView
        android:id="@+id/FootNoteTxtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/version_txt_size"
        android:textStyle="normal"
        android:typeface="serif" />
	
</RelativeLayout>
