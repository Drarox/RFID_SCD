<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.st.Fragments.MenuST25TVToolsFragment">

    <RelativeLayout
        android:id="@+id/ST25TVToolFragTagHeaderFragmentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/ST25TVToolMemConfLayout"
        android:layout_below="@+id/ST25TVToolFragTagHeaderFragmentId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ST25TVToolMemConfHeaderTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/current_mem_conf_txt"
            android:textSize="@dimen/ti_act_add_txt_field_size"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/ST25TVToolMemConfTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ti_act_add_txt_field_size"
            android:typeface="serif"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
