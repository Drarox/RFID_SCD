<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuNDEFWriteActivityId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context="com.st.demo.MMYDemoWriteNDEFActivity" >

    <fragment
        android:name="com.st.NFC.NFCAppHeaderFragment"
        android:id="@+id/MnwActNFCAppHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" />
 	
	<RelativeLayout
	    android:id="@+id/MnwHeaderRelLayoutId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_marginTop="@dimen/activity_vertical_offset_header_start_display"
		android:layout_below="@+id/MnwActNFCAppHeaderFragmentId" >
	
		<TextView
			android:id="@+id/MnwHeaderTxtId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:typeface="serif"
	        android:textStyle="bold"
			android:text="@string/mnw_header_txt"
			android:textSize="@dimen/mnr_header_txt_size" />
	
		<TextView
	 		android:id="@+id/MnwHeaderTailId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/MnwHeaderTxtId"
			android:layout_marginTop="@dimen/tag_header_tail_top_margin"
			android:text="@string/tag_header_tail_txt"
			android:textSize="@dimen/tag_header_tail_size" />
	
	</RelativeLayout>

    <fragment
        android:name="com.st.Fragments.TagHeaderFragment"
        android:id="@+id/MnwActTagHeaderFragmentId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/MnwHeaderRelLayoutId" />
    	
	<RelativeLayout
	    android:id="@+id/MnwActMsgRelLayoutId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/tag_header_tail_top_margin"
		android:layout_marginBottom="@dimen/ti_act_add_txt_top_margin"
		android:layout_below="@+id/MnwActTagHeaderFragmentId"
		android:layout_above="@+id/MnwActReadBtnAreaId" >
	    
	    <TextView
	   	    android:id="@+id/MnwActMsgHeaderId"
	       	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       	android:typeface="serif"
	        android:textStyle="bold"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_header_field_size"
	   	    android:text="@string/mnf_frag_NDEF_msg_header_txt" />
	
	    <TextView
	        android:id="@+id/MnwActMsgNbId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	   	    android:layout_alignBottom="@+id/MnwActMsgHeaderId"
		    android:layout_toRightOf="@+id/MnwActMsgHeaderId"
	        android:clickable="false"
	        android:inputType="number"
	        android:lines="1"
	        android:text="1"
	        android:textSize="@dimen/mnw_frag_NDEF_msg_nb_field_size"
	        android:typeface="serif" />
	
	    <TextView
	   	    android:id="@+id/MnwActMsgTotalId"
	       	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	   	    android:layout_alignBottom="@+id/MnwActMsgNbId"
		    android:layout_toRightOf="@+id/MnwActMsgNbId"
		    android:text=" / 1"
	       	android:typeface="serif"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_nb_field_size" />
	
		<Button 
		    android:id="@+id/MnwActFirstMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_first_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnwActMsgTotalId"
		    android:layout_toRightOf="@+id/MnwActMsgTotalId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnwActPrevMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_prev_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnwActFirstMsgBtnId"
		    android:layout_toRightOf="@+id/MnwActFirstMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnwActNextMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_next_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnwActPrevMsgBtnId"
		    android:layout_toRightOf="@+id/MnwActPrevMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnwActLastMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_last_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_width"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnwActNextMsgBtnId"
		    android:layout_toRightOf="@+id/MnwActNextMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<Button 
		    android:id="@+id/MnwActNewMsgBtnId"
		    android:visibility="gone"
			android:background="@drawable/selector_new_item_button" 
			android:layout_width="@dimen/mnf_frag_NDEF_msg_btn_height"
			android:layout_height="@dimen/mnf_frag_NDEF_msg_btn_height"
	   	    android:layout_alignBottom="@+id/MnwActLastMsgBtnId"
		    android:layout_toRightOf="@+id/MnwActLastMsgBtnId"
			android:layout_marginLeft="@dimen/activity_horizontal_margin" >
		</Button>
	
		<TextView
		    android:id="@+id/MnwActRecTypeHeaderId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_below="@+id/MnwActMsgHeaderId"
		    android:layout_marginTop="@dimen/tag_header_top_margin"
	        android:textStyle="bold"
	        android:typeface="serif"
	   	    android:textSize="@dimen/mnw_frag_NDEF_msg_header_field_size"
		    android:text="@string/mnf_frag_NDEF_rec_types_header" />

		<Spinner
		    android:id="@+id/MnwActRecTypeId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/MnwActRecTypeHeaderId"
			android:layout_marginLeft="@dimen/ti_act_add_txt_field_left_margin"
		    android:layout_alignBaseline="@+id/MnwActRecTypeHeaderId" />
		
		<FrameLayout
        	android:id="@+id/MnwActRecContentId"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/MnwActRecTypeHeaderId"
		    android:layout_marginTop="@dimen/mnf_frag_NDEF_rec_top_margin" />

		<!--
		</RelativeLayout>
		-->

	</RelativeLayout>

	<!-- Button to re-read tag NDEF file -->
	<RelativeLayout
	    android:id="@+id/MnwActReadBtnAreaId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
		android:layout_marginLeft="@dimen/mnf_frag_read_btn_left_margin"
		android:layout_marginBottom="@dimen/mnf_frag_read_btn_bottom_margin" >
	    
	    <include layout="@layout/view_basic_button" />
	    
	</RelativeLayout>


	
	<!-- Button to write NDEF file to tag -->
	<RelativeLayout
	    android:id="@+id/MnwActWriteBtnAreaId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
		android:layout_marginRight="@dimen/mnf_frag_write_btn_right_margin"
		android:layout_marginBottom="@dimen/mnf_frag_write_btn_bottom_margin" >	    
	    <include layout="@layout/view_basic_button" />	    
	</RelativeLayout>
	

	    

	<include layout="@layout/view_application_version" />

</RelativeLayout>
